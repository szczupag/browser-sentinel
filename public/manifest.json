{
  "manifest_version": 3,
  "name": "Shield",
  "version": "1.0.0",
  "description": "AI-powered extension that alerts you to online threats while ensuring your privacy.",
  "action": {
    "default_popup": "src/popup/index.html"
  },
  "permissions": ["storage"],
  "background": {
    "service_worker": "assets/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["assets/content.js"]
    }
  ]
}
