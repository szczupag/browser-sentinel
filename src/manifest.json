{
  "manifest_version": 3,
  "name": "Shield",
  "version": "1.0.0",
  "description": "AI-powered extension that alerts you to online threats while ensuring your privacy.",
  "action": {
    "default_popup": "src/popup/index.html"
  },
  "permissions": ["storage", "contextMenus", "activeTab"],
  "background": {
    "service_worker": "src/background.ts"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content-script.ts"]
    },
    {
      "matches": ["<all_urls>"],
      "js": ["src/content-phishing-analysis.ts"]
    }
  ]
}
